@using ASF.UI.WbSite.Services.Localization

@model IEnumerable<ASF.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.getResourceString("Index")</h2>

<p>
    @Html.ActionLink(Html.getResourceString("Create"), "Create")
</p>
<table class="table table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayName(Html.getResourceString("Title"))
        </th>
        <th>
            @Html.DisplayName(Html.getResourceString("Description"))
        </th>
        <th>
            @Html.DisplayName(Html.getResourceString("Dealer"))
        </th>
