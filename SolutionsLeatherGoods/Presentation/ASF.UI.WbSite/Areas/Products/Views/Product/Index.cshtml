            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendedor.LastName), @Html.DisplayFor(modelItem => item.Vendedor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
