@using ASF.UI.WbSite.Services.Localization

@model ASF.Entities.LocaleStringResource

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.getResourceString("Delete")</h2>

<h3 class="text-danger">@Html.getResourceString("Delete.Message")</h3>
<div>
    <h4>@Html.getResourceString("Resources")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.getResourceString("Resource.value")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResourceValue)
        </dd>

        <dt>
            @Html.getResourceString("Resource_Id")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocaleResourceKey_Id)
        </dd>

        <dt>
            @Html.getResourceString("Language_Id")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language_Id)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Html.getResourceString("Delete") class="btn btn-default" />
            @Html.ActionLink(Html.getResourceString("Cancel"), "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
