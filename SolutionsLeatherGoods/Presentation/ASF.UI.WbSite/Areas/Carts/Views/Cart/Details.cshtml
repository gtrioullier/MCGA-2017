@using ASF.UI.WbSite.Services.CultureHelper

@model ASF.Entities.Cart

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = Model.ItemCount;
}

<h2>@Html.getResourceString("Details")</h2>

<div>
    @*CABECERA*@
    <div class="panel panel-default">
        <div class="col-lg-12">
            <div class="panel panel-default panel-heading h3">
                <table width="100%">
                    <tr>
                        <td width="50%" align="left" style="vertical-align:central">
                            @Html.getResourceString("Cart")
                        </td>
                        <td width="50%" align="right" style="vertical-align:central">
                            @Model.CartDate.ToShortDateString()
                        </td>
                    </tr>
                </table>
            </div>
            @*LINEAS DE CARRITO*@
            <div class="panel panel-default panel-body">
                <div class="form-group">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" cellspacing="0" width="100%" id="cartItemTable">
                            <thead>
                                <tr>
                                    <th width="10%"></th>
                                    <th width="5%">@Html.getResourceString("Quantity")</th>
                                    <th width="50%">@Html.getResourceString("Product")</th>
                                    <th width="10%">@Html.getResourceString("Price")</th>
                                    <th width="10%">@Html.getResourceString("Subtotal")</th>
                                    <th width="5%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.Hidden("count", count)
                                @if (Model != null && Model.CartItem != null && Model.CartItem.Count() > 0)
                                {
                                    var i = 0;
                                    foreach (var item in Model.CartItem)
                                    {
                                        @Html.Hidden("Id" + i, item.Id)
                                        <tr>
                                            <td width="10%">
                                                <button id="@i" value="agregarDetalle" class="btn btn-default">+</button>
                                                <button id="@i" value="eliminarDetalle" class="btn btn-default">-</button>
                                            </td>
                                            <td width="5%">@Html.TextBox("CartItem[" + i + "].Quantity", item.Quantity, new { @class = "form-control", @id = "quantity" + i, @readonly = "readonly" })</td>
                                            <td width="50%">@Html.TextBox("CartItem[" + i + "].ProductId", item.Product.Description, new { @class = "form-control", @id = "product" + i, @readonly = "readonly" }) </td>
                                            <td width="10%">@Html.TextBox("CartItem[" + i + "].Price", item.Product.Price, new { @class = "form-control", @id = "price" + i, @readonly = "readonly" })</td>
                                            <td width="10%">@Html.TextBox("CartItem[" + i + "].Subtotal", item.Price, new { @class = "form-control", @id = "subtotal" + i, @placeholder = "$ #.##", @readonly = "readonly" })</td>
                                            <td width="5%"><button id="@i" value="eliminarLinea" class="btn btn-default">x</button></td>
                                        </tr>
                                        i++;
                                    }
                                }
                                else
                                {
                                    <h4>Todavía no hay items en el carrito, empiece a comprar</h4>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel panel-default panel-footer h4">
                <table width="100%">
                    <tr>
                        <td width="50%" align="left" style="vertical-align:central">
                            @Html.getResourceString("Total")
                        </td>
                        <td width="50%" align="right" style="vertical-align:central">
                            @*<input type="text" id="total" />*@
                            <input type="text" id="total" class="text-right" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Buy", "Buy", "Cart", new { CartRowid = Model.Rowid }, new { @id = "BuyBtn", @class = "btn btn-default" })
    @Html.ActionLink("Continue shopping", "Index", "Home", new { area = "" }, new { @class = "btn btn-default" })
</p>

@section Scripts{
    <script src="~/Scripts/total.js" type="text/javascript"></script>
    <script src="~/Scripts/detalles.js" type="text/javascript"></script>
}