        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Country"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountryId)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Description"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("TotalProducts"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalProducts)
        </dd>

        <dt>
