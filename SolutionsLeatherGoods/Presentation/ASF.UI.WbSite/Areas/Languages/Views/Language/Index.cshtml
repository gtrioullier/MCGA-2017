@using ASF.UI.WbSite.Services.Localization

@model IEnumerable<ASF.Entities.Language>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.getResourceString("Index")</h2>

<p>
    @Html.ActionLink(Html.getResourceString("Create"), "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.getResourceString("Name")
        </th>
        <th>
            @Html.getResourceString("LanguageCulture")
        </th>
        <th>
            @Html.getResourceString("Flag")
        </th>
        <th>
            @Html.getResourceString("RTL")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageCulture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FlagImageFileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RightToLeft)
        </td>
        <td>
            @Html.ActionLink(Html.getResourceString("Edit"), "Edit", new { id=item.Id }) |
            @Html.ActionLink(Html.getResourceString("Details"), "Details", new { id=item.Id }) |
            @Html.ActionLink(Html.getResourceString("Delete"), "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
