@using ASF.UI.WbSite.Services.CultureHelper

@model ASF.Entities.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete";
}

<h2>@Html.getResourceString("Delete")</h2>

<h3 class="text-danger">@Html.getResourceString("Delete.Message")</h3>
<div>
    <h4>@Html.getResourceString("Category")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Html.getResourceString("Name"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedBy)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Html.getResourceString("Delete") class="btn btn-default" />
            @Html.ActionLink(Html.getResourceString("Cancel"), "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
