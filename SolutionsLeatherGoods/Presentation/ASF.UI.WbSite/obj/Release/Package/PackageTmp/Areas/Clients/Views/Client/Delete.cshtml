@using ASF.UI.WbSite.Services.CultureHelper

@model ASF.Entities.Client

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete";
}

<h2>@Html.getResourceString("Delete")</h2>

<h3 class="text-danger">@Html.getResourceString("Delete.Message")</h3>
<div>
    <h4>@Html.getResourceString("Client")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Html.getResourceString("Name"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("LastName"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Email"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Country"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountryId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AspNetUsers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUsers)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("City"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("SignupDate"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SignupDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rowid)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rowid)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("OrderCount"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderCount)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedBy)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Html.getResourceString("Delete") class="btn btn-default" />
            @Html.ActionLink(Html.getResourceString("Cancel"), "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
