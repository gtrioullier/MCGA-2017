@using ASF.UI.WbSite.Services.CultureHelper

@model ASF.Entities.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.getResourceString("Delete")</h2>

<h3 class="text-danger">@Html.getResourceString("Delete.Message")</h3>
<div>
    <h4>@Html.getResourceString("Product")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Html.getResourceString("Title"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Description"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Dealer"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DealerId)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Image"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("Price"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("QuantitySold"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantitySold)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("AvgStars"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AvgStars)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rowid)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rowid)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("CreatedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedOn"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedOn)
        </dd>

        <dt>
            @Html.DisplayName(Html.getResourceString("ChangedBy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChangedBy)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Html.getResourceString("Delete") class="btn btn-default" /> 
            @Html.ActionLink(Html.getResourceString("Cancel"), "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
