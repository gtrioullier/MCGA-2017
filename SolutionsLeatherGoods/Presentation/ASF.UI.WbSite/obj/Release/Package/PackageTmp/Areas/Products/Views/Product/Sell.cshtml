@using ASF.UI.WbSite.Services.CultureHelper

@model ASF.Entities.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.getResourceString("Sell")</h2>

<div>
    <h4>@Html.getResourceString("Product")</h4>
    <div class="content-section-b">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6 col-sm-6">
                    <div class="clearfix"></div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName(Html.getResourceString("Description")):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                @Html.DisplayName(Html.getResourceString("Price")):
                            </dt>

                            <dd>
                                <text>$ </text>@Html.DisplayFor(model => model.Price)
                            </dd>
                        </dl>
                        <p>
                            @Html.ActionLink(Html.getResourceString("Add to cart"), "Create", "CartItem", new { area="CartsItems", productRowid = Model.Rowid }, new { @class = "btn btn-default" })
                            @Html.ActionLink(Html.getResourceString("Cancel"), "Index", "Home", new { area=""}, new { @class = "btn btn-default" })
                        </p>
                    </div>
                <div class="col-lg-5 col-sm-pull-6 col-sm-6">
                    <img src="@Url.Content(Model.Image)" class="img-home-responsive" />
                </div>
            </div>
        </div>
    </div>
</div>

