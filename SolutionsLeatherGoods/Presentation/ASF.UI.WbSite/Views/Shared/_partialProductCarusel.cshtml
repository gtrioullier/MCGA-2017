@using ASF.UI.WbSite.Services.Localization

@model IEnumerable<ASF.Entities.Product>

@if (Model.Count() > 0)
{
    <div class="lsItem">
        <ul id="lightSlider">
            @foreach (var item in Model)
            {
                <li>
                    <a href="products/product/sell/@item.Rowid"><img src="@Url.Content(item.Image)" alt="@item.Description"></a>
                    <div class="caption text-center">
                        <text>@item.Description</text><br />
                        <text>$ @item.Price </text><br />
                        <a href="/CartsItems/CartItem/Create/?productRowid=@item.Rowid">@Html.getResourceString("AddToCart")</a>
                    </div>
                </li>
            }
        </ul>
    </div>
}

else
{

    <h3 class="text-center">@Html.getResourceString("NoItemsFound")</h3>

}